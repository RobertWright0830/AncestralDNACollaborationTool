<main>
  <section class='bg-dark text-light p-5 text-sm-start'>
    <div class='container'>
      <div class='row mt-5'>
        <div class='col-lg-4 m-auto rounded-top wrapper'>
          <h2 class='text-center pt-3'>Login Now</h2>

          {{! login form fields }}
          <form class='py-3 login-form' id="form">

            {{!-- username field --}}
            <div class='input-group mb-1'>
              <span class='input-group-text'><i class='fa fa-user'></i></span>
              <input
                type='text'
                class='form-control'
                id='username-login'
                placeholder='Username'
                required
              />
            </div>
            <small class='success' id='username-login-message'>Error message</small>

            {{!-- password field --}}
            <div class='input-group mb-3'>
              <span class='input-group-text'><i class='fa fa-lock'></i></span>
              <input
                type='password'
                class='form-control'
                id='password-login'
                placeholder='Password'
                autocomplete="new-password"
                required
              />
            </div>
            <small class='success' id='password-login-message'>Error message</small>

            {{!-- login button --}}
            <div class='d-grid'>
              <button type='submit' class='btn btn-primary'>Login</button>
              <p class='text-center mt-4'>Register Now for Free by Clicking
                <a href='/signup'>Register Now</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>

<script src='./js/login.js'></script>